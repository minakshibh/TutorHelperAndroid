<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/header"
        layout="@layout/header_layout" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_layout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/listview_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Enter Merge Parent Id :"
                android:textSize="17sp"
                android:textColor="@color/black" />

            <LinearLayout
                 android:id="@+id/lay_altContactInfo"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="horizontal" >

                 <RelativeLayout
                     android:layout_width="wrap_content"
                     android:layout_height="fill_parent"
                     android:background="@drawable/input_field_left" >

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerInParent="true"
                         android:src="@drawable/user_icon" />
                 </RelativeLayout>

                 <EditText
                      android:id="@+id/userid"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/input_field_right"
                     android:hint="Enter parent Id"
                     android:paddingLeft="10dp"
                     android:singleLine="true"
                     android:textColor="#000000" />

            </LinearLayout>
           <!--  <EditText
                android:id="@+id/userid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Enter parent Id"
                android:padding="5dp"
                 android:singleLine="true"
                android:textColor="#000000" >

                <requestFocus />

            </EditText> -->

            <Button
                android:id="@+id/btn_merge"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/appBlue"
                 android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="Merge" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>